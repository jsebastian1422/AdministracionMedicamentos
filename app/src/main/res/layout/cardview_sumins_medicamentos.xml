<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="105dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtFechaHoraSum"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/text_table_body_2"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="191dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="191dp"
                                android:layout_height="15dp">

                                <TextView
                                    android:id="@+id/txtCodMedicamento"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="top"
                                    android:background="@drawable/text_table_body"
                                    android:paddingTop="@dimen/activity_vertical_margin"
                                    android:textAlignment="center"
                                    android:textSize="10sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="191dp"
                                android:layout_height="15dp">

                                <TextView
                                    android:id="@+id/txtNombreProducto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/text_table_body_2"
                                    android:layout_marginLeft="-191dp"
                                    android:paddingTop="@+id/txtCodMedicamento"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="191dp"
                                android:layout_height="15dp">

                                <TextView
                                    android:id="@+id/txtProveMedicamento"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/text_table_body"
                                    android:layout_marginLeft="-191dp"
                                    android:paddingBottom="@dimen/activity_vertical_margin"
                                    android:paddingTop="@+id/txtProducto"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="191dp"
                                android:layout_height="15dp">

                                <TextView
                                    android:id="@+id/txtLoteMedicamento"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/text_table_body_2"
                                    android:layout_marginLeft="-191dp"
                                    android:paddingBottom="@dimen/activity_vertical_margin"
                                    android:paddingTop="@+id/txtProducto"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="191dp"
                                android:layout_height="15dp">

                                <TextView
                                    android:id="@+id/txtCumMedicamento"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/text_table_body"
                                    android:layout_marginLeft="-191dp"
                                    android:paddingBottom="@dimen/activity_vertical_margin"
                                    android:paddingTop="@+id/txtProducto"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="191dp"
                                android:layout_height="15dp">

                                <TextView
                                    android:id="@+id/txtRegiSanitario"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/text_table_body_2"
                                    android:layout_marginLeft="-191dp"
                                    android:paddingBottom="@dimen/activity_vertical_margin"
                                    android:paddingTop="@+id/txtProducto"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="191dp"
                                android:layout_height="15dp">

                                <TextView
                                    android:id="@+id/txtFechaVenci"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/text_table_body"
                                    android:layout_marginLeft="-191dp"
                                    android:paddingBottom="@dimen/activity_vertical_margin"
                                    android:paddingTop="@+id/txtProducto"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>

                            </TableRow>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/editSuminstro"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/st_btn_redondeado"
                                android:src="@drawable/ic_edit_suminis"/>

                            <ImageButton
                                android:id="@+id/deleteSuministro"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="1dp"
                                android:background="@drawable/st_btn_redondeado"
                                android:src="@drawable/ic_delete_suminis"/>
                        </LinearLayout>

                    </TableRow>

                </RelativeLayout>
            </TableLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>