<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sistemas.administracionmedicamentos.UI.MedicamentosActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/table_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="94dp"
                android:layout_height="38dp"
                android:background="@drawable/texttable"
                android:gravity="center"
                android:text="HABITACION"
                android:textAlignment="center"
                android:textColor="#f0f0f0"

                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="63dp"
                android:layout_height="38dp"
                android:background="@drawable/texttable"
                android:gravity="center"
                android:text="CAMA"
                android:textAlignment="center"
                android:textColor="#f0f0f0"
                android:textSize="9sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="99dp"
                android:layout_height="38dp"
                android:background="@drawable/texttable"
                android:gravity="center"
                android:text="CUENTA"
                android:textAlignment="center"
                android:textColor="#f0f0f0"
                android:textSize="9sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:background="@drawable/texttable"
                android:gravity="center"
                android:text="INGRESO"
                android:textAlignment="center"
                android:textColor="#f0f0f0"
                android:textSize="9sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtHabitacion"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/text_table_body_2"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#021f54"
                android:textSize="8sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtCama"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/text_table_body"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#021f54"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCuenta"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/text_table_body_2"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#021f54"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIngreso"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/text_table_body"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#021f54"
                android:textSize="8sp"
                android:textStyle="bold" />

        </TableRow>


        <!-- Body 1 -->

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/table_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="255dp"
                android:layout_height="38dp"
                android:background="@drawable/texttable"
                android:gravity="center"
                android:text="PACIENTE"
                android:textAlignment="center"
                android:textColor="#f0f0f0"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:background="@drawable/texttable"
                android:gravity="center"
                android:text="IDENTIFICACION"
                android:textAlignment="center"
                android:textColor="#f0f0f0"
                android:textSize="9sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtPaciente"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/text_table_body_2"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#021f54"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_table_body"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#021f54"
                android:textSize="8sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnBuscMeciamento"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        app:layout_constraintVertical_bias="0.05" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="271dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="247dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>