<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ListSuminstrosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="38dp">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="255dp"
                        android:layout_height="38dp"
                        android:background="@drawable/texttable"
                        android:gravity="center"
                        android:text="PACIENTE"
                        android:textAlignment="center"
                        android:textColor="#f0f0f0"
                        android:textSize="9sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/texttable"
                        android:gravity="center"
                        android:text="IDENTIFICACION"
                        android:textAlignment="center"
                        android:textColor="#f0f0f0"
                        android:textSize="9sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="38dp">

                    <TextView
                        android:id="@+id/txtPaciente"
                        android:layout_width="255dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_table_body_2"
                        android:gravity="center"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#021f54"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtIdentificacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_table_body"
                        android:gravity="center"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#021f54"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </TableRow>

            </RelativeLayout>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="38dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/texttable"
                        android:gravity="center"
                        android:text="Medicamentos"
                        android:textAlignment="center"
                        android:textColor="#f0f0f0"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="38dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_table_body_2"
                        android:gravity="center"
                        android:text="FECHA"
                        android:textAlignment="center"
                        android:textColor="#021f54"

                        android:textSize="10sp"
                        android:textStyle="bold"/>

                    <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_table_body"
                    android:gravity="center"
                    android:text="SUMINISTRADO"
                    android:textAlignment="center"
                    android:textColor="#021f54"

                    android:textSize="10sp"
                    android:textStyle="bold"/>

                    <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_table_body"
                    android:gravity="center"
                    android:text="DESECHO"
                    android:textAlignment="center"
                    android:textColor="#021f54"

                    android:textSize="10sp"
                    android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_table_body_2"
                        android:gravity="center"
                        android:text="USUARIO"
                        android:textAlignment="center"
                        android:textColor="#021f54"

                        android:textSize="10sp"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcvListMedicamentos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="76dp" />

                </TableRow>
            </RelativeLayout>
        </TableLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>